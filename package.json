{
    "name": "ember-component-view",
    "displayName": "Ember-Component-View",
    "description": "A tree view for ember components",
    "version": "0.1.4",
    "publisher": "phumke",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:emberComponents",
        "onLanguage:js",
        "onLanguage:hbs",
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "emberComponents",
                    "name": "Ember Components"
                }
            ]
        },
        "commands": [
            {
                "command": "emberComponents.openFile",
                "title": "Open File"
            },
            {
				"command": "emberComponents.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "icons/refresh_light.svg",
					"dark": "icons/refresh_dark.svg"
				}
            },
            {
                "command": "emberComponents.openComponent",
                "title": "Open Component"
            },
            {
                "command": "emberComponents.closeComponent",
                "title": "Close Component"
            },
            {
                "command": "emberComponents.runTests",
                "title": "Run Tests"
            },
            {
                "command": "emberComponents.runUnitTests",
                "title": "Run Unit Tests"
            },
            {
                "command": "emberComponents.runIntTests",
                "title": "Run Integration Tests"
            },
            {
                "command": "emberComponents.runAcceptTests",
                "title": "Run Acceptance Tests"
            }
        ],
        "menus": {
            "view/title": [{
                "command": "emberComponents.refreshEntry",
                "when": "view == emberComponents"
            }],
            "view/item/context": [
                {
                    "command": "emberComponents.closeComponent",
                    "when": "view == emberComponents"
                },
                {
                    "command": "emberComponents.runTests",
                    "when": "view == emberComponents",
                    "group": "tests@1"
                },
                {
                    "command": "emberComponents.runUnitTests",
                    "when": "view == emberComponents",
                    "group": "tests@2"
                },
                {
                    "command": "emberComponents.runIntTests",
                    "when": "view == emberComponents",
                    "group": "tests@3"
                },
                {
                    "command": "emberComponents.runAcceptTests",
                    "when": "view == emberComponents",
                    "group": "tests@4"
                }
            ],
            "explorer/context": [{
                "command": "emberComponents.openComponent"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
